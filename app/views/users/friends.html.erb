

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <%= link_to "用户列表", users_path, class: "btn btn-primary" %>
    <%= link_to "我的好友", friends_user_path(current_user), class: "btn btn-primary" %>
    <table class="table">
      <tr>
        <th>ID</th>
        <th>用户名</th>
        <th></th>
      </tr>
      <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.id %></td>
          <td><%= friend.username %></td>
          <td>
            delete
          </td>
        </tr>
      <% end -%>
    </table>

    <%= will_paginate @friends %>
  </div>
  <div class="col-sm-2"></div>
</div>