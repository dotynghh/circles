<h1>User Login</h1>

<div class="row">
<div class="col-sm-4">
  <%= form_tag sessions_path,method: "post" do %>
    <div class="form-group">
      <input type="text" name="username" placeholder="username..." class="form-control" id="form_username" title="The user name 6-12 characters">
    </div>
    <div class="form-group">
      <input type="password" name="password" placeholder="password..." class="form-control" id="form_password">
    </div>
    <input type="submit" class="btn btn-primary" value="Login" />
    <%= link_to "registered", new_user_path %>
    <% end %>
</div>
<div class="col-sm-8"></div>
</div>