

<div class="row">
	<div class="col-sm-2"></div>
  <div class="col-sm-8">

  	<h1><%= @blog.title %></h1>
    <p>作者: <%= @blog.user.username %>, <%= @blog.created_at %></p>
    <%= @blog.content %>
    <p>----------------------------------------</p>
    <table class="table">
      <tr>
        <th>ID</th>
        <th>回复内容</th>
        <th>回复人</th>
        <th>回复时间</th>
      </tr>
    	<% @blog.blog_contents.each do |content| %>
     	<tr>
     		<td><%= content.id %></td>
     		<td><%= content.content %></td>
     		<td><%= content.user_id %></td>
     		<td><%= content.created_at%></td>
     	</tr>
    	<% end -%>
    </table>
   	<%= form_for @blog_content, url: add_contents_blogs_path, method: :post do |f| %>
   	
     	<div class="form-group">
       	<%= f.hidden_field :blog_id, value: @blog.id %>
      </div>
      <div class="form-group">
       	<%= f.text_area :content, class: "form-control", placeholder: "内容" %>
      </div>
      <div class="form-group">
      <%= f.submit "回复", class: "btn btn-primary" %> 
      </div>
    <% end -%> 

  </div>

  <div class="col-sm-2">
  </div>
</div>


