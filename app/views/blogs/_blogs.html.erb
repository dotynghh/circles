<table class="table">
      <tr>
        <th>ID</th>
        <th>标题</th>
        <th>作者</th>
      </tr>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.id %></td>
          <td>
            <%= link_to blog.title, blog_path(blog) %>
            <% blog.tags.each do |tag| %>
              <span class="badge"><%= tag.title %></span>
            <% end -%>
          </td>
          <td><%= blog.user.username %></td>
            <td>
        <% if blog.user == current_user %>
          <%= blog.is_public ? "显示" : "不显示" %>

          <%= link_to "编辑", edit_blog_path(blog) %>
        <% end -%>
      </td>
        </tr>
      <% end -%>
    </table>

    
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <%= will_paginate @blogs%>
    </div>
    <div class="col-sm-4">
    </div>